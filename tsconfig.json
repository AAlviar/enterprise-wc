{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "checkJs": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strict": true,
    "target": "es2020",
    "module": "es2020",
    "types": [],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./build/ts"
  },
  "include": [
    "src/**/*.ts",
    "src/**/**/*.ts",
    "src/**/*.d.ts",
    "./declaration.d.ts"
  ],
  "exclude": ["node_modules", "test", "build", "dist"]
}
