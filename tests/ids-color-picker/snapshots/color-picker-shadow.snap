<div class="ids-color-picker field-height-md">
      
      <ids-trigger-field label="Default Color Picker">
        <ids-color size="md" tabindex="-1" class="color-preview" slot="trigger-start" hex=""></ids-color>
        <ids-trigger-button slot="trigger-end" class="color-picker-trigger-btn">
          <ids-text audible="true" translate-text="true" translation-key=""></ids-text>
          <ids-icon icon="dropdown"></ids-icon>
        </ids-trigger-button>
      </ids-trigger-field>
      <ids-popup id="color-picker-popup" type="menu" align="center" position-style="absolute">
        <slot slot="content" class="color-popup"></slot>
      </ids-popup>
    </div>